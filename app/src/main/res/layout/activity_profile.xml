<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">



        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/aaaa">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="300dp"
                android:layout_height="281dp"
                android:background="@drawable/user6"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:backgroundTint="#ccdadada"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Full name"
                android:id="@+id/textView"
                android:background="#fff"
                android:drawableLeft="@drawable/user4"
                android:paddingStart="15dp"
                android:drawablePadding="30dp"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="E-mail"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="15dp"
                    android:id="@+id/textView5"
                    android:layout_toStartOf="@+id/imgsend"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:id="@+id/imgsend"
                    android:layout_alignParentRight="true"
                    android:background="#fff"
                    android:layout_centerVertical="true"
                    android:src="@drawable/send" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Birthdate"
                android:drawableLeft="@drawable/gift"
                android:drawablePadding="15dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Interests"
                android:id="@+id/textView6"
                android:drawableLeft="@drawable/like"
                android:drawablePadding="15dp"/>


        </LinearLayout>

    </RelativeLayout>
</ScrollView>